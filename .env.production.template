# 6FB AI Agent System - Production Environment Configuration
# Copy this file to .env.production and fill in your actual values

# ============================================================================
# REQUIRED CONFIGURATION
# ============================================================================

# Application Environment
NODE_ENV=production
FRONTEND_PORT=3000
BACKEND_PORT=8000
HTTP_PORT=80
HTTPS_PORT=443

# Frontend Configuration
NEXT_PUBLIC_FRONTEND_URL=https://your-domain.com
NEXT_PUBLIC_API_URL=https://your-domain.com

# Database Configuration (Required)
DATABASE_URL=postgresql://username:password@postgres:5432/barbershop_ai
POSTGRES_DB=barbershop_ai
POSTGRES_USER=barbershop
POSTGRES_PASSWORD=your-secure-postgres-password

# Redis Configuration (Required)
REDIS_URL=redis://:your-secure-redis-password@redis:6379/0
REDIS_PASSWORD=your-secure-redis-password

# Supabase Configuration (Required)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# ============================================================================
# AI SERVICE API KEYS (Optional but recommended)
# ============================================================================

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_ORG_ID=your-openai-org-id

# Anthropic Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key

# Google AI Configuration
GOOGLE_AI_API_KEY=your-google-ai-api-key

# ============================================================================
# PAYMENT PROCESSING (Optional)
# ============================================================================

# Stripe Configuration
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# Rate Limiting
ENABLE_RATE_LIMITING=true
ENABLE_CSRF_PROTECTION=true
ENABLE_DDOS_PROTECTION=true
ENABLE_API_DOCS=false

# Rate Limit Thresholds
GLOBAL_RATE_LIMIT=1000
GLOBAL_RATE_WINDOW=3600
AUTH_RATE_LIMIT=10
AUTH_RATE_WINDOW=300
API_RATE_LIMIT=5000
API_RATE_WINDOW=3600

# DDoS Protection
DDOS_THRESHOLD=100
DDOS_BAN_DURATION=3600

# Request Limits
MAX_REQUEST_SIZE=10485760

# Security Features
FORCE_SSL=true
ENABLE_SECURITY_HEADERS=true

# ============================================================================
# COMMUNICATION SERVICES
# ============================================================================

# SendGrid Email Service
SENDGRID_API_KEY=SG.your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@your-domain.com
SENDGRID_FROM_NAME="Your Barbershop Name"

# Twilio SMS Service (Optional)
TWILIO_ACCOUNT_SID=ACyour-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Pusher Real-time Updates
NEXT_PUBLIC_PUSHER_KEY=your-pusher-key
PUSHER_APP_ID=your-app-id
PUSHER_SECRET=your-pusher-secret
NEXT_PUBLIC_PUSHER_CLUSTER=us2

# ============================================================================
# EXTERNAL INTEGRATIONS
# ============================================================================

# CIN7 Inventory Management
CIN7_API_URL=https://inventory.dearsystems.com
CIN7_ACCOUNT_ID=your-cin7-account-id
CIN7_API_KEY=your-cin7-api-key

# Google Business Profile
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ============================================================================
# DATA ENCRYPTION
# ============================================================================

# Encryption Configuration (Generate secure keys!)
ENCRYPTION_KEY=generate-32-byte-secure-key-here
ENCRYPTION_SALT=generate-unique-salt-here

# ============================================================================
# BUSINESS CONFIGURATION
# ============================================================================

# Default Shop Settings (Override in database per shop)
DEFAULT_SHOP_NAME="Your Barbershop"
DEFAULT_TIMEZONE=America/New_York
DEFAULT_CURRENCY=USD
DEFAULT_LANGUAGE=en

# Business Hours (24-hour format)
DEFAULT_OPENING_TIME=09:00
DEFAULT_CLOSING_TIME=19:00
DEFAULT_BOOKING_SLOT_MINUTES=30

# Operational Defaults
DEFAULT_BARBERS_PER_SHOP=5
DEFAULT_APPOINTMENTS_PER_BARBER_DAILY=16
DEFAULT_SERVICE_BUFFER_MINUTES=5

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Core Features
ENABLE_AI_AGENTS=true
ENABLE_INVENTORY_MANAGEMENT=true
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_MULTI_LOCATION=true
ENABLE_ONLINE_BOOKING=true
ENABLE_PAYMENT_PROCESSING=true

# Advanced Features
ENABLE_PREDICTIVE_ANALYTICS=true
ENABLE_CUSTOMER_LOYALTY=true
ENABLE_STAFF_MANAGEMENT=true
ENABLE_ADVANCED_REPORTING=true

# ============================================================================
# MONITORING AND ANALYTICS (Optional)
# ============================================================================

# Sentry Error Tracking
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_DSN=https://your-backend-sentry-dsn@sentry.io/project-id

# PostHog Analytics
NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com
POSTHOG_API_KEY=your-posthog-api-key

# Grafana Configuration
GRAFANA_USER=admin
GRAFANA_PASSWORD=your-secure-grafana-password
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
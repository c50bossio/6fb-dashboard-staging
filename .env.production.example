# 6FB AI Agent System - Production Environment Configuration
# Copy this file to .env.production and fill in your production values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1
PORT=3000

# =============================================================================
# DATABASE & BACKEND
# =============================================================================
# Primary database (Supabase PostgreSQL)
DATABASE_URL=postgresql://postgres:your_password@db.your_project.supabase.co:5432/postgres

# Supabase Configuration
SUPABASE_URL=https://your_project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
NEXT_PUBLIC_SUPABASE_URL=https://your_project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Redis for Caching and Sessions
REDIS_URL=redis://:your_redis_password@redis:6379
REDIS_PASSWORD=your_secure_redis_password

# =============================================================================
# AI SERVICES
# =============================================================================
# OpenAI Configuration
OPENAI_API_KEY=sk-your_openai_api_key
OPENAI_ORGANIZATION=your_openai_org_id

# Anthropic Configuration
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key

# =============================================================================
# PAYMENT PROCESSING
# =============================================================================
# Stripe Configuration
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key

# =============================================================================
# REAL-TIME & NOTIFICATIONS
# =============================================================================
# Pusher Configuration
PUSHER_APP_ID=your_pusher_app_id
PUSHER_APP_KEY=your_pusher_app_key
PUSHER_APP_SECRET=your_pusher_app_secret
PUSHER_APP_CLUSTER=your_pusher_cluster
NEXT_PUBLIC_PUSHER_APP_KEY=your_pusher_app_key
NEXT_PUBLIC_PUSHER_APP_CLUSTER=your_pusher_cluster

# Novu Configuration
NOVU_API_KEY=your_novu_api_key
NEXT_PUBLIC_NOVU_APPLICATION_IDENTIFIER=your_novu_app_identifier

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================
# PostHog Configuration
POSTHOG_API_KEY=your_posthog_project_api_key
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_project_api_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Sentry Configuration
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
NEXT_PUBLIC_SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Vercel Edge Config
EDGE_CONFIG=https://edge-config.vercel.com/your_config_id?token=your_token

# =============================================================================
# SECURITY & CORS
# =============================================================================
# CORS Origins (comma-separated)
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# JWT Secret for authentication
JWT_SECRET=your_super_secure_jwt_secret_key_minimum_32_characters

# Encryption key for sensitive data
ENCRYPTION_KEY=your_32_character_encryption_key_here

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Domain Configuration
NEXT_PUBLIC_APP_URL=https://your-domain.com
API_BASE_URL=https://your-domain.com/api

# SSL Configuration (if using custom certificates)
SSL_CERT_PATH=/etc/nginx/certs/fullchain.pem
SSL_KEY_PATH=/etc/nginx/certs/privkey.pem

# =============================================================================
# ENTERPRISE FEATURES
# =============================================================================
# File Upload Configuration
MAX_FILE_SIZE=50MB
UPLOAD_PATH=/app/uploads

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_ENABLED=true

# Email Configuration (for notifications)
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
FROM_EMAIL=noreply@your-domain.com

# =============================================================================
# OPTIONAL INTEGRATIONS
# =============================================================================
# Google Calendar Integration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# WhatsApp Business API
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# Enable/Disable Monitoring
ENABLE_METRICS=true
ENABLE_PERFORMANCE_MONITORING=true

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================
# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# =============================================================================
# FEATURE FLAGS (Quick Toggles)
# =============================================================================
FEATURE_AI_CHAT=true
FEATURE_REAL_TIME=true
FEATURE_ANALYTICS=true
FEATURE_NOTIFICATIONS=true
FEATURE_PAYMENTS=true
FEATURE_CALENDAR=true
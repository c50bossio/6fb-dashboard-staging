# NextAuth.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-here

# Database URLs
DATABASE_URL=postgresql://username:password@localhost:5432/bookedbarber
FASTAPI_URL=http://localhost:8000

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here
CSRF_SECRET=your-csrf-secret-key-here

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Facebook OAuth Configuration
FACEBOOK_CLIENT_ID=your-facebook-app-id
FACEBOOK_CLIENT_SECRET=your-facebook-app-secret

# Email Configuration (for magic links and verification)
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@gmail.com
EMAIL_SERVER_PASSWORD=your-app-password
EMAIL_FROM=noreply@bookedbarber.com

# Production vs Development
NODE_ENV=development

# Optional: Redis Configuration (for production caching)
REDIS_URL=redis://localhost:6379

# Optional: Sentry Configuration (for error monitoring)
SENTRY_DSN=your-sentry-dsn-here

# Optional: Analytics Configuration
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Security Configuration
RATE_LIMIT_REDIS_URL=redis://localhost:6379
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Two-Factor Authentication
TOTP_ISSUER=BookedBarber
TOTP_DIGITS=6
TOTP_PERIOD=30

# Geolocation Service (optional)
MAXMIND_LICENSE_KEY=your-maxmind-license-key
IP2LOCATION_API_KEY=your-ip2location-api-key

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Feature Flags
ENABLE_2FA=true
ENABLE_SOCIAL_LOGIN=true
ENABLE_MAGIC_LINKS=true
ENABLE_DEVICE_TRACKING=true
ENABLE_SUSPICIOUS_ACTIVITY_DETECTION=true
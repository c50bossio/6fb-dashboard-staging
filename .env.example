# 6FB AI Agent System Environment Configuration Template
# ===========================================
# CRITICAL: Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local or any file with real secrets to git
# ===========================================

# FastAPI Backend Configuration
FASTAPI_BASE_URL=http://localhost:8001
NEXT_PUBLIC_API_URL=http://localhost:8001

# Agent System Configuration
NEXT_PUBLIC_ENABLE_RAG=true
NEXT_PUBLIC_ENABLE_MOCK_FALLBACK=true

# Development Configuration
NODE_ENV=development
NEXT_PUBLIC_DEV_MODE=true

# ===========================================
# SUPABASE CONFIGURATION - REPLACE WITH YOUR VALUES
# ===========================================
# Get these from: Supabase Dashboard → Settings → API Keys
NEXT_PUBLIC_SUPABASE_URL=https://your_project_id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Turnstile CAPTCHA Configuration  
# Get this from: Cloudflare Turnstile Dashboard → Your Widget → Site Key
NEXT_PUBLIC_TURNSTILE_SITE_KEY=your_turnstile_site_key_here

# ===========================================
# AI SERVICES - REPLACE WITH YOUR VALUES
# ===========================================
# Anthropic (Claude)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini
GOOGLE_GEMINI_API_KEY=your_google_gemini_api_key_here

# ===========================================
# OTHER SERVICES - REPLACE WITH YOUR VALUES
# ===========================================
# Twilio SMS Service
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# SendGrid Email Service
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=6FB AI Agent System

# PostHog Analytics Configuration
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key_here
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

# Stripe Payment Processing
STRIPE_SECRET_KEY=your_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# Pusher Real-time Communications
PUSHER_APP_ID=your_pusher_app_id_here
NEXT_PUBLIC_PUSHER_KEY=your_pusher_key_here
PUSHER_SECRET=your_pusher_secret_here
NEXT_PUBLIC_PUSHER_CLUSTER=us2

# Novu Notification Service
NOVU_API_KEY=your_novu_api_key_here
NEXT_PUBLIC_NOVU_APPLICATION_IDENTIFIER=your_novu_app_id_here

# Sentry Error Tracking
SENTRY_DSN=your_sentry_dsn_here
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here

# Vercel Edge Config (Feature Flags)
EDGE_CONFIG=your_edge_config_connection_string_here

# ===========================================
# SECURITY CONFIGURATION (GENERATE NEW VALUES)
# ===========================================
# JWT Secret for secure authentication (generate with: openssl rand -base64 32)
JWT_SECRET=your_jwt_secret_here

# Admin password (generate with: openssl rand -base64 16)  
ADMIN_PASSWORD=your_secure_admin_password_here

# Database encryption key (generate with: openssl rand -base64 32)
DATABASE_ENCRYPTION_KEY=your_database_encryption_key_here

# Session secret (generate with: openssl rand -base64 32)
SESSION_SECRET=your_session_secret_here

# Rate limiting configuration
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # 100 requests per window
RATE_LIMIT_API=60  # API requests per minute
RATE_LIMIT_AUTH=5  # Auth requests per minute
RATE_LIMIT_CAMPAIGNS=10  # Campaign requests per hour

# CORS Configuration (Environment-based)
# Comma-separated list of allowed origins
# Development: Automatically includes localhost variants
# Staging: Add your staging domain(s)  
# Production: Add your production domain(s)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://app.yourdomain.com

# Advanced CORS Settings (optional)
CORS_CREDENTIALS=true
CORS_MAX_AGE=86400
CORS_ALLOW_HEADERS=Content-Type,Authorization,X-Requested-With,X-API-Key
CORS_EXPOSE_HEADERS=X-RateLimit-Limit,X-RateLimit-Remaining,X-Request-ID

# ===========================================
# PRODUCTION CONFIGURATION
# ===========================================
# Spending Limits (monthly in USD)
SPENDING_LIMIT_INDIVIDUAL=500
SPENDING_LIMIT_SHOP=1000
SPENDING_LIMIT_ENTERPRISE=5000
SPENDING_LIMIT_ALERT_THRESHOLD=0.8  # Alert at 80% usage

# Monitoring Thresholds
ERROR_RATE_THRESHOLD=10  # Errors per hour
RESPONSE_TIME_THRESHOLD=1000  # Milliseconds
MEMORY_THRESHOLD=90  # Percentage
CPU_THRESHOLD=80  # Percentage

# Health Check Configuration
HEALTH_CHECK_SECRET=your_health_check_secret_here
HEALTH_CHECK_INTERVAL=60000  # 1 minute
HEALTH_CHECK_TIMEOUT=5000  # 5 seconds

# Deployment Configuration
DEPLOYMENT_PLATFORM=vercel  # vercel, aws, gcp, azure, docker
DEPLOYMENT_REGION=us-east-1
CDN_PROVIDER=cloudflare
DEPLOYMENT_ENV=development  # development, staging, production

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_FREQUENCY=daily  # hourly, daily, weekly
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=s3://your-backup-bucket

# Redis Configuration (Production Rate Limiting & Caching)
# Option 1: Use REDIS_URL for managed Redis services (Upstash, AWS ElastiCache, etc.)
REDIS_URL=redis://your-redis-host:6379
# Option 2: Use individual Redis connection settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0
REDIS_TTL=3600  # Cache TTL in seconds

# Compliance Settings
GDPR_ENABLED=true
CCPA_ENABLED=true
HIPAA_ENABLED=false
PCI_COMPLIANCE_LEVEL=4  # 1-4, SAQ-A compliance
DATA_RETENTION_DAYS=730  # 2 years

# Debug Settings
DEBUG=false
LOG_LEVEL=info  # debug, info, warn, error
ENABLE_QUERY_LOGGING=false
ENABLE_PERFORMANCE_LOGGING=false
ENABLE_API_DOCUMENTATION=true

# Feature Flags
FEATURE_EMAIL_CAMPAIGNS=true
FEATURE_SMS_CAMPAIGNS=true
FEATURE_AUTOMATED_CAMPAIGNS=false
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_BULK_OPERATIONS=false

# Performance Settings
MAX_RECIPIENTS_PER_CAMPAIGN=10000
MAX_CAMPAIGNS_PER_DAY=100
MAX_FILE_UPLOAD_SIZE=10485760  # 10MB in bytes
REQUEST_TIMEOUT=30000  # 30 seconds

# Development Overrides (set to true in dev only)
SKIP_AUTH=false
MOCK_SERVICES=false
SKIP_RATE_LIMIT=false
SKIP_SPENDING_LIMIT=false
# 6FB AI Agent System Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Development Configuration
NODE_ENV=development
NEXT_PUBLIC_DEV_MODE=true

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8001
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# Database Configuration - SQLite for development, PostgreSQL for production
DATABASE_URL=sqlite:///./data/agent_system.db

# PostgreSQL Configuration (for production)
POSTGRES_DB=agent_system
POSTGRES_USER=agent_user
POSTGRES_PASSWORD=REPLACE_WITH_SECURE_PASSWORD

# =============================================================================
# AI SERVICES CONFIGURATION - REPLACE WITH YOUR API KEYS
# =============================================================================
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
GOOGLE_AI_API_KEY=your-google-ai-key-here

# =============================================================================
# SMS/EMAIL INTEGRATION - REPLACE WITH YOUR CREDENTIALS
# =============================================================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=your-verified-sendgrid-email
SENDGRID_FROM_NAME=6FB AI Agents

# =============================================================================
# SOCIAL MEDIA API CONFIGURATION
# =============================================================================
INSTAGRAM_ACCESS_TOKEN=your_instagram_token
FACEBOOK_ACCESS_TOKEN=your_facebook_token
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
LINKEDIN_ACCESS_TOKEN=your_linkedin_token

# CORS Configuration
CORS_ORIGINS=http://localhost:9999,http://localhost:3000

# Feature Flags
NEXT_PUBLIC_ENABLE_RAG=true
NEXT_PUBLIC_ENABLE_MOCK_FALLBACK=true

# Resource Limits
FRONTEND_MEMORY_LIMIT=1G
FRONTEND_CPU_LIMIT=1.0
BACKEND_MEMORY_LIMIT=512M
BACKEND_CPU_LIMIT=0.5

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# Google Calendar Integration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8001/api/v1/calendar/oauth/callback

# Security - GENERATE SECURE RANDOM KEYS
JWT_SECRET_KEY=GENERATE_SECURE_JWT_SECRET_KEY_HERE
SECRET_KEY=GENERATE_SECURE_SECRET_KEY_HERE
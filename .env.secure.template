# 6FB AI Agent System - SECURE Environment Configuration Template
# Copy this file to .env.local and fill in your actual values
# NEVER commit actual API keys or secrets to version control

# =============================================================================
# SECURITY CONFIGURATION (REQUIRED)
# =============================================================================
# Generate with: openssl rand -base64 32
JWT_SECRET_KEY=YOUR_SECURE_JWT_SECRET_HERE

# Generate with: openssl rand -base64 16
ADMIN_PASSWORD=YOUR_SECURE_ADMIN_PASSWORD_HERE
ADMIN_EMAIL=admin@yourdomain.com

# =============================================================================
# FASTAPI BACKEND CONFIGURATION
# =============================================================================
FASTAPI_BASE_URL=http://localhost:8001
NEXT_PUBLIC_API_URL=http://localhost:8001
NODE_ENV=development
NEXT_PUBLIC_DEV_MODE=true

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Get these from: Supabase Dashboard → Settings → API Keys
NEXT_PUBLIC_SUPABASE_URL=YOUR_SUPABASE_URL_HERE
NEXT_PUBLIC_SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY_HERE
SUPABASE_SERVICE_ROLE_KEY=YOUR_SUPABASE_SERVICE_ROLE_KEY_HERE

# =============================================================================
# AI SERVICES
# =============================================================================
# OpenAI API Key (starts with sk-proj-...)
OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE

# Anthropic API Key (starts with sk-ant-api03-...)
ANTHROPIC_API_KEY=YOUR_ANTHROPIC_API_KEY_HERE

# Google Gemini API Key (starts with AIzaSy...)
GOOGLE_GEMINI_API_KEY=YOUR_GOOGLE_GEMINI_API_KEY_HERE

# =============================================================================
# THIRD-PARTY SERVICES
# =============================================================================
# Stripe Payment Processing
STRIPE_SECRET_KEY=YOUR_STRIPE_SECRET_KEY_HERE
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=YOUR_STRIPE_PUBLISHABLE_KEY_HERE

# SendGrid Email Service
SENDGRID_API_KEY=YOUR_SENDGRID_API_KEY_HERE
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=Your Company Name

# Twilio SMS Service
TWILIO_ACCOUNT_SID=YOUR_TWILIO_ACCOUNT_SID_HERE
TWILIO_AUTH_TOKEN=YOUR_TWILIO_AUTH_TOKEN_HERE
TWILIO_PHONE_NUMBER=+1234567890

# PostHog Analytics
NEXT_PUBLIC_POSTHOG_KEY=YOUR_POSTHOG_KEY_HERE
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

# Pusher Real-time Communications
PUSHER_APP_ID=YOUR_PUSHER_APP_ID_HERE
NEXT_PUBLIC_PUSHER_KEY=YOUR_PUSHER_KEY_HERE
PUSHER_SECRET=YOUR_PUSHER_SECRET_HERE
NEXT_PUBLIC_PUSHER_CLUSTER=us2

# Sentry Error Tracking
SENTRY_DSN=YOUR_SENTRY_DSN_HERE
NEXT_PUBLIC_SENTRY_DSN=YOUR_SENTRY_DSN_HERE

# Novu Notification Service
NOVU_API_KEY=YOUR_NOVU_API_KEY_HERE
NEXT_PUBLIC_NOVU_APPLICATION_IDENTIFIER=YOUR_NOVU_APP_ID_HERE

# Cloudflare Turnstile CAPTCHA
NEXT_PUBLIC_TURNSTILE_SITE_KEY=YOUR_TURNSTILE_SITE_KEY_HERE

# Vercel Edge Config (Feature Flags)
EDGE_CONFIG=YOUR_EDGE_CONFIG_CONNECTION_STRING_HERE

# =============================================================================
# AGENT SYSTEM CONFIGURATION
# =============================================================================
NEXT_PUBLIC_ENABLE_RAG=true
NEXT_PUBLIC_ENABLE_MOCK_FALLBACK=true
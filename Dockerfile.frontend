# Frontend Dockerfile for 6FB AI Agent System
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install --production

# Copy source code
COPY . .

# Build the application
RUN npm run build

# Expose port 9999
EXPOSE 9999

# Start the application
CMD ["npm", "start", "--", "-p", "9999"]
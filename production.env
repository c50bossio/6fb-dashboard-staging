# ðŸš€ PRODUCTION ENVIRONMENT CONFIGURATION
# 6FB AI Agent System - Live Barbershop Deployment
# Generated: 2025-01-14

# ====================================
# ENVIRONMENT SETTINGS
# ====================================
NODE_ENV=production
PRODUCTION_MODE=true
DEBUG_MODE=false
LOG_LEVEL=warn
ENABLE_CORS=false

# ====================================
# SERVER CONFIGURATION
# ====================================
FRONTEND_PORT=9999
BACKEND_PORT=8001
HOST=0.0.0.0
FRONTEND_URL=https://ai-agent.barbershop.com
BACKEND_URL=https://api-agent.barbershop.com

# ====================================
# DATABASE CONFIGURATION (PRODUCTION)
# ====================================
# Use Supabase PostgreSQL for production (mandatory per CLAUDE.md)
SUPABASE_URL=YOUR_PRODUCTION_SUPABASE_URL
SUPABASE_SERVICE_ROLE_KEY=YOUR_PRODUCTION_SERVICE_ROLE_KEY
SUPABASE_ANON_KEY=YOUR_PRODUCTION_ANON_KEY

# Connection pooling for high performance
DB_POOL_SIZE=20
DB_TIMEOUT=30000
DB_RETRY_ATTEMPTS=3

# ====================================
# AI SERVICES CONFIGURATION
# ====================================
# Primary AI Model (GPT-5 as per CLAUDE.md)
OPENAI_API_KEY=YOUR_PRODUCTION_OPENAI_KEY
OPENAI_MODEL=gpt-5
OPENAI_MAX_TOKENS=4000
OPENAI_TIMEOUT=30000

# Fallback AI Models
ANTHROPIC_API_KEY=YOUR_PRODUCTION_ANTHROPIC_KEY
ANTHROPIC_MODEL=claude-opus-4.1
GOOGLE_AI_API_KEY=YOUR_PRODUCTION_GOOGLE_KEY
GOOGLE_AI_MODEL=gemini-2.0-flash

# ====================================
# SECURITY CONFIGURATION
# ====================================
# JWT & Authentication
JWT_SECRET=YOUR_ULTRA_SECURE_JWT_SECRET_256_BITS
JWT_EXPIRES_IN=24h
SESSION_SECRET=YOUR_ULTRA_SECURE_SESSION_SECRET
BCRYPT_ROUNDS=12

# Rate Limiting (Production Hardening)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL=true

# CORS Security
ALLOWED_ORIGINS=https://ai-agent.barbershop.com,https://api-agent.barbershop.com
CORS_CREDENTIALS=true

# Security Headers
ENABLE_HELMET=true
ENABLE_COMPRESSION=true
ENABLE_TRUST_PROXY=true

# ====================================
# MONITORING & LOGGING
# ====================================
# Health Checks
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=10000
ENABLE_HEALTH_LOGGING=true

# Application Monitoring
SENTRY_DSN=YOUR_PRODUCTION_SENTRY_DSN
SENTRY_ENVIRONMENT=production
SENTRY_SAMPLE_RATE=0.1

# Performance Monitoring
NEW_RELIC_LICENSE_KEY=YOUR_NEW_RELIC_KEY
NEW_RELIC_APP_NAME=6FB-AI-Agent-Production

# ====================================
# AUTOMATED TASK EXECUTION
# ====================================
# Production Safety Controls
AUTO_EXECUTION_ENABLED=true
REQUIRE_APPROVAL_FOR_CRITICAL=true
MAX_CONCURRENT_EXECUTIONS=10
EXECUTION_TIMEOUT=60000

# Trigger Thresholds (Production Optimized)
ANXIOUS_CUSTOMER_THRESHOLD=0.75
FRUSTRATED_CUSTOMER_THRESHOLD=0.80
SATISFIED_CUSTOMER_THRESHOLD=0.85
CONFUSED_CUSTOMER_THRESHOLD=0.70

# ====================================
# BACKUP & RECOVERY
# ====================================
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=6
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/var/backups/ai-agent

# Database Backup
DB_BACKUP_ENABLED=true
DB_BACKUP_SCHEDULE="0 2 * * *"
DB_BACKUP_COMPRESSION=true

# ====================================
# PERFORMANCE OPTIMIZATION
# ====================================
# Caching
REDIS_ENABLED=true
REDIS_URL=redis://production-redis:6379
CACHE_TTL=3600
MEMORY_CACHE_SIZE=256MB

# Resource Limits
MAX_MEMORY_USAGE=2048MB
MAX_CPU_USAGE=80
WORKER_PROCESSES=4

# Connection Optimization
KEEP_ALIVE_TIMEOUT=65000
HEADERS_TIMEOUT=66000
MAX_CONNECTIONS=1000

# ====================================
# NOTIFICATION SYSTEMS
# ====================================
# Email Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=noreply@barbershop.com
SMTP_PASS=YOUR_EMAIL_APP_PASSWORD

# SMS Notifications (Twilio)
TWILIO_ACCOUNT_SID=YOUR_TWILIO_SID
TWILIO_AUTH_TOKEN=YOUR_TWILIO_TOKEN
TWILIO_PHONE_NUMBER=+1234567890

# Push Notifications
PUSHER_APP_ID=YOUR_PUSHER_APP_ID
PUSHER_KEY=YOUR_PUSHER_KEY
PUSHER_SECRET=YOUR_PUSHER_SECRET
PUSHER_CLUSTER=us2

# ====================================
# AUDIT & COMPLIANCE
# ====================================
AUDIT_LOGGING_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=90
GDPR_COMPLIANCE_MODE=true
DATA_ENCRYPTION_ENABLED=true

# PCI Compliance (for payment data)
PCI_COMPLIANCE_MODE=true
ENCRYPT_SENSITIVE_DATA=true
LOG_SENSITIVE_DATA=false

# ====================================
# DEPLOYMENT INFO
# ====================================
DEPLOYMENT_VERSION=1.0.0
BUILD_NUMBER=PLACEHOLDER_BUILD_NUMBER
DEPLOY_DATE=PLACEHOLDER_DEPLOY_DATE
GIT_COMMIT=PLACEHOLDER_GIT_COMMIT

# ====================================
# FEATURE FLAGS
# ====================================
ENABLE_VOICE_ASSISTANT=true
ENABLE_EMOTION_RECOGNITION=true
ENABLE_AUTOMATED_TASKS=true
ENABLE_PREDICTIVE_ANALYTICS=true
ENABLE_MULTI_AGENT_COLLABORATION=true

# ====================================
# EXTERNAL INTEGRATIONS
# ====================================
# Calendar Integration
GOOGLE_CALENDAR_ENABLED=true
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET

# Payment Processing (if needed)
STRIPE_SECRET_KEY=YOUR_STRIPE_SECRET_KEY
STRIPE_PUBLISHABLE_KEY=YOUR_STRIPE_PUBLISHABLE_KEY
STRIPE_WEBHOOK_SECRET=YOUR_STRIPE_WEBHOOK_SECRET

# ====================================
# DISASTER RECOVERY
# ====================================
DISASTER_RECOVERY_ENABLED=true
FAILOVER_REGION=us-west-2
RECOVERY_TIME_OBJECTIVE=4h
RECOVERY_POINT_OBJECTIVE=1h